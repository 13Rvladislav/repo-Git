                    android:layout_marginLeft="10dp"
                    android:text="@string/titi"
                    android:textColor="#3D0250"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
