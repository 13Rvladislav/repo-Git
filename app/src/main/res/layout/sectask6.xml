<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/teoria_sinie"
    android:paddingTop="-11dp"
    android:layout_marginTop="-2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/bottomSecurityK"
        app:backgroundTint="#FFFFFF"
        app:iconTint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="76dp"
        android:layout_height="62dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/_16" />

    <ImageView
        android:id="@+id/podlSecurity"
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:padding="-1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/_____2__0png" />

    <TextView
        android:id="@+id/textsecurity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="68dp"
        android:layout_marginRight="68dp"
        android:text="БЕЗОПАСНОСТЬ"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/bottomSecurityK"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/continueSec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="ПРОДОЛЖИТЬ"
        android:textSize="24sp"
        app:backgroundTint="#1E1358"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        app:layout_constraintBottom_toTopOf="@+id/continueSec"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/podlSecurity"
        android:layout_width="405dp"
        android:layout_height="545dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/ic_podlozhka_teoria_belaya"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textSec5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:text="Впишите недостающие слова."
                    android:textColor="#3D0250" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/ic_podlozhka_teoria_belaya"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView49"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Вы заметили, что от вашей странички в соцсети были совершены действия, которые вы не делали, то скорее всего вас 1) .... . Далее следует обратиться в 2) ....  для получения помощи. Вы в это время можете проверить компьютер на наличие компьютерных 3) .... "
                    android:textColor="#3D0250" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView53"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="1)"
                        android:textColor="#3D0250"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/Sec6_1"
                        android:layout_width="266dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:autofillHints=""
                        android:backgroundTint="#1794E0"
                        android:ems="10"
                        android:hint="Введите ответ"
                        android:inputType="textEmailAddress"
                        android:textColor="#3D0250"
                        android:textColorHint="#1E1358"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="263dp"
                    android:layout_height="45dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView52"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="2)"
                        android:textColor="#3D0250"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/Sec6_2"
                        android:layout_width="266dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:autofillHints=""
                        android:backgroundTint="#1794E0"
                        android:ems="10"
                        android:hint="Введите ответ"
                        android:inputType="textEmailAddress"
                        android:textColor="#1E1358"
                        android:textColorHint="#1E1358"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView50"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="3)"
                        android:textColor="#3D0250"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/Sec6_3"
                        android:layout_width="266dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:autofillHints=""
                        android:backgroundTint="#1794E0"
                        android:ems="10"
                        android:hint="Введите ответ"
                        android:inputType="textEmailAddress"
                        android:textColor="#1E1358"
                        android:textColorHint="#1E1358"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>