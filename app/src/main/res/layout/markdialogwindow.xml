<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="620dp"
    android:layout_gravity="center"
    android:background="@drawable/algdialog_background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginTop="-5dp"
        app:srcCompat="@drawable/algdialog_your_mark" />

    <ImageView
        android:id="@+id/imageView18"
        android:layout_gravity="center"
        android:layout_width="211dp"
        android:layout_height="126dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView19"
        app:srcCompat="@drawable/algdialog_avatar" />

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="320dp"
        android:layout_height="157dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/algdialog_congr" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"

        android:layout_height="63dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/imageView22">

        <ImageView
            android:id="@+id/imageView20"
            android:layout_width="163dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:srcCompat="@drawable/algdialog_cup" />

        <TextView
            android:id="@+id/mark_for_the_lvl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="-70dp"
            android:text="0"
            android:textColor="#3D0250"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:text="/100"
            android:textColor="#3D0250"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/button9"
        android:layout_width="300dp"
        android:layout_height="53dp"
        android:layout_marginTop="22dp"
        android:text="ПРОЙТИ ЗАНОВО"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        app:backgroundTint="@color/green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4" /> />

    <Button
        android:id="@+id/button10"
        android:layout_width="300dp"
        android:layout_height="53dp"
        android:layout_marginTop="16dp"
        android:text="ПРОДОЛЖИТЬ"
        android:layout_gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:backgroundTint="@color/purple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button9" /> />

</LinearLayout>