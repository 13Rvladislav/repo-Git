<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/fonitog_">


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="418dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/autorback"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="250dp"
            android:layout_height="33dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/todo1"
            app:srcCompat="@drawable/registr" />

        <EditText
            android:id="@+id/email"
            android:layout_width="266dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:backgroundTint="#1794E0"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="@string/email1"
            android:inputType="textEmailAddress"
            android:textColor="#90DDF3"
            android:textColorHint="#90DDF3"
            android:textSize="18sp"
            android:autofillHints="" />

        <EditText
            android:id="@+id/UserName"
            android:layout_width="266dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:backgroundTint="#1794E0"
            android:ems="10"
            android:hint="@string/usname"
            android:inputType="textEmailAddress"
            android:textColor="#94DFF4"
            android:textColorHint="#90DDF3"
            android:autofillHints="" />

        <EditText
            android:id="@+id/password1"
            android:layout_width="266dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:backgroundTint="#1794E0"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="@string/passsword"
            android:inputType="textEmailAddress"
            android:textColor="#94DFF4"
            android:textColorHint="#90DDF3"
            android:autofillHints="" />

        <EditText
            android:id="@+id/password2"
            android:layout_width="266dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:backgroundTint="#1794E0"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="@string/pass2"
            android:inputType="textEmailAddress"
            android:textColor="#94DFF4"
            android:textColorHint="#90DDF3"
            android:autofillHints="" />

        <Button
            android:id="@+id/REGISTRATION"
            android:layout_width="288dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="2dp"
            android:backgroundTint="#FF8800"
            android:text="@string/registrat"
            android:textColor="#000326"
            android:textSize="18sp"
            android:layout_marginStart="2dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>