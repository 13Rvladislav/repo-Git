<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zadanie_fon_inform"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <Button
        android:id="@+id/bottomCompDevK1"
        android:layout_width="76dp"
        android:layout_height="62dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/_16"
        app:backgroundTint="#FFFFFF"
        app:iconTint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/podlComputer"
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:padding="-1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/podl_inform"/>

    <TextView
        android:id="@+id/textdevice"
        android:layout_width="249dp"
        android:layout_height="68dp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="16dp"
        android:text="ОСНОВЫ ИНФОРМАТИКИ"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/bottomCompDevK1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/continueSec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="ПРОДОЛЖИТЬ"
        android:textSize="24sp"
        app:backgroundTint="#3D0250"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        app:layout_constraintBottom_toTopOf="@+id/continueSec"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/podlSecurity"
        android:layout_width="405dp"
        android:layout_height="545dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/ic_podlozhka_teoria_belaya"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textSec5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Какие предложения являются высказываниями?"
                    android:textColor="#3D0250" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/ic_podlozhka_teoria_belaya"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/icheckBox1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Цветы орхидеи красивые и вкусно пахнут." />

                <CheckBox
                    android:id="@+id/icheckBox2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Завтра будет дождь." />

                <CheckBox
                    android:id="@+id/icheckBox3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Красный цвет красивый." />

                <CheckBox
                    android:id="@+id/icheckBox4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Пушкин был писателем." />

                <CheckBox
                    android:id="@+id/icheckBox5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Билл Гейтс основал компанию Apple." />

                <CheckBox
                    android:id="@+id/icheckBox6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Молния - очень яркое и красивое явление природы." />

                <CheckBox
                    android:id="@+id/icheckBox7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Количество звуков и букв в слове может быть одинаковым или отличаться." />

                <CheckBox
                    android:id="@+id/icheckBox8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Слово торт короткое и вызывает аппетит." />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>